# AI Resume Builder - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Application
APP_PORT=8080
APP_CONTEXT_PATH=/

# Database Configuration
DB_URL=jdbc:postgresql://localhost:5432/ai_resume_builder
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DRIVER=org.postgresql.Driver
DB_POOL_SIZE=10

# Hibernate/JPA Configuration
HIBERNATE_DIALECT=org.hibernate.dialect.PostgreSQLDialect
HIBERNATE_DDL_AUTO=update
HIBERNATE_SHOW_SQL=false
HIBERNATE_FORMAT_SQL=true

# Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_API_ENDPOINT=https://generativelanguage.googleapis.com/v1beta/models/gemini-2.0-flash:generateContent

# Thymeleaf Configuration
THYMELEAF_CACHE=false
THYMELEAF_PREFIX=classpath:/templates/
THYMELEAF_SUFFIX=.html

# Logging Configuration
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_APP=DEBUG
LOG_LEVEL_HIBERNATE=INFO

# Mail Configuration (Optional)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_SMTP_AUTH=true
MAIL_SMTP_STARTTLS=true

# Security Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRATION=86400000

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=*
CORS_MAX_AGE=3600

# Docker Configuration
DOCKER_POSTGRES_DB=ai_resume_builder
DOCKER_POSTGRES_USER=postgres
DOCKER_POSTGRES_PASSWORD=postgres
DOCKER_APP_PORT=8080
DOCKER_DB_PORT=5432

# PDF Configuration
PDF_FONT_FAMILY=Arial, sans-serif
PDF_DEFAULT_FONT_SIZE=12
PDF_PAGE_WIDTH_MM=210
PDF_PAGE_HEIGHT_MM=297

# Resume Configuration
RESUME_MAX_FILE_SIZE=5242880
RESUME_ALLOWED_FORMATS=pdf,docx
TEMPLATE_STYLE_CLASSIC=true
TEMPLATE_STYLE_MODERN=true
TEMPLATE_STYLE_CREATIVE=true
